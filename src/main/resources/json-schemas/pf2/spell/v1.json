{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://mindsoup.net/spell/v1.json",
	"title": "Spell",
	"description": "Spells for Pathfinder 2E",
	"definitions": {
	},
	"type": "object",
	"properties": {
		"metaInformation": {
			"description": "Meta information regarding this object: publishing information, internal system data, etc",
			"type": "object",
			"properties": {
				"objectData": {
					"description": "Various properties that are relevant in our data management system",
					"type": "object",
					"properties": {
						"id": {
							"type": "integer"
						},
						"revision": {
							"type": "integer"
						}
					},
					"required": ["id", "revision"]
				},
				"publicationData": {
					"description": "Publication related information",
					"type": "object",
					"properties": {
						"sourceBook": {
							"type": "string",
							"minLength": 1
						},
						"page": {
							"type": "integer"
						},
						"publisher": {
							"type": "string",
							"minLength": 1
						},
						"license": {
							"type": "string",
							"enum": ["OGL", "RESTRICTED"]
						}
					},
					"required": ["sourceBook", "page", "publisher", "license"]
				},
				"pathfinderSocietyData": {
					"description": "Pathfinder society related data",
					"type": "object",
					"properties": {
						"legal": {
							"type": "boolean",
							"default": true
						}
					},
					"required": ["legal"]
				}
			},
			"required": ["objectData", "publicationData"]
		},
		"traits": {
			"description": "List of traits of this spell",
			"type": "array",
			"items": {
				"type": "string",
				"minLength": 1
			},
			"minItems": 1,
			"uniqueItems": true
		},
		"name": {
			"type": "string",
			"minLength": 1
		},
		"type": {
			"type": "string",
			"enum": ["CANTRIP", "SPELL"],
			"default": "SPELL",
			"minLength": 1
		},
		"level": {
			"description": "Level of this spell",
			"type": "integer",
			"minimum": 1
		},
		"rarity": {
			"description": "Rarity of this spell.",
			"type": "string",
			"enum": ["COMMON", "UNCOMMON", "RARE", "UNIQUE"],
			"default": "COMMON"
		},
		"traditions": {
			"type": "array",
			"items": {
				"type": "string",
				"enum": ["ARCANE", "DIVINE", "OCCULT", "PRIMAL"],
				"default": "ARCANE",
				"minLength": 1
			},
			"minItems": 1,
			"uniqueItems": true
		},
		"action": {
			"type": "string",
			"enum": ["NONE", "FREE_ACTION", "REACTION", "ACTION", "TWO_ACTIONS", "THREE_ACTIONS", "VARIABLE"],
			"default": "TWO_ACTIONS",
			"minLength": 1
		},
		"castingTime": {
			"type": "object",
			"properties": {
				"time": {
					"type": "integer",
					"enum": [1, 10],
					"minimum": 1
				},
				"unit": {
					"type": "string",
					"enum": ["MINUTE", "HOUR"],
					"minLength": 1
				}
			},
			"required": ["time", "unit"]
		},
		"description": {
			"description": "Description of the spell",
			"type": "string",
			"minLength": 1
		}
	},
	"required": [
		"metaInformation",
		"traits",
		"name",
		"type",
		"level",
		"rarity",
		"traditions",
		"description"
	]
}